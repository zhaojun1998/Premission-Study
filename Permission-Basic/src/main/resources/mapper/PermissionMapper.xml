<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="im.zhaojun.mapper.PermissionMapper">
    <resultMap id="BaseResultMap" type="im.zhaojun.model.Permission">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, name, description
    </sql>
    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from permission
        where id = #{id,jdbcType=INTEGER}
    </select>
    <insert id="insert" keyColumn="id" keyProperty="id" parameterType="im.zhaojun.model.Permission"
            useGeneratedKeys="true">
        insert into permission (name, description)
        values (#{name,jdbcType=VARCHAR}, #{description,jdbcType=VARCHAR})
    </insert>
    <update id="updateByPrimaryKey" parameterType="im.zhaojun.model.Permission">
        update permission
        set name = #{name,jdbcType=VARCHAR},
        description = #{description,jdbcType=VARCHAR}
        where id = #{id,jdbcType=INTEGER}
    </update>

    <select id="selectAll" resultType="im.zhaojun.model.Permission">
        select
        <include refid="Base_Column_List"/>
        from permission
    </select>
</mapper>